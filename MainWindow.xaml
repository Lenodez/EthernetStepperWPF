<Window x:Class="EthernetStepperWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EthernetStepperWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="369" Width="350">
    <Viewbox x:Name="Close" RenderTransformOrigin="0.427,0.473" Stretch="Fill" >
        <Grid Height="353.04" Width="350">
            <Label x:Name="label" Content="Порт прослушки" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="110" Margin="3,3,0,0"/>
            <Label x:Name="label_Copy" Content="Порт получателя&#xA;" HorizontalAlignment="Left" Margin="5,80,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.495,-0.353" Height="34" Width="104"/>
            <Label x:Name="label_Copy1" Content="IP получателя" HorizontalAlignment="Left" Margin="5,118,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.519,0.465" Width="104" Height="26"/>
            <TextBox x:Name="localportTextBox" HorizontalAlignment="Left" Margin="126,6,0,0" Text="&#xA;" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="24"/>
            <TextBox x:Name="remoteportTextBox" HorizontalAlignment="Left" Margin="126,85,0,0" Text="&#xA;" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.503,1.007" Height="24"/>
            <TextBox x:Name="remoteadressTextBox" HorizontalAlignment="Left" Margin="126,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="23"/>
            <Button x:Name="loginButton" Content="Задать &#xA;параметры" HorizontalAlignment="Left" Margin="59,166,0,0" VerticalAlignment="Top" Height="43" Width="88" Click="loginButton_Click"/>
            <Button x:Name="sendButton" Content="=&gt;" HorizontalAlignment="Left" Margin="211,219,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.488,0.541" Height="30" Width="39" Click="sendButton_Click"/>
            <TextBox x:Name="commandTextBox" HorizontalAlignment="Left" Margin="4,219,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="208" Height="30"/>
            <TextBox x:Name="receivedMessageTextBox" HorizontalAlignment="Left" Margin="4,287,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="247" Height="31"/>
            <Button x:Name="logoutButton" Content="Закрыть &#xA;соединение" HorizontalAlignment="Left" Margin="174,166,0,0" VerticalAlignment="Top" Height="42" Width="88" Click="logoutButton_Click" Cursor=""/>
            <TextBox x:Name="sendportbox" HorizontalAlignment="Left" Margin="126,45,0,284" Text="&#xA;" TextWrapping="Wrap" Width="120"/>
            <Label x:Name="label_Copy2" Content="Порт для отправки" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="115" Margin="1,37,0,0"/>

        </Grid>
    </Viewbox>
</Window>
